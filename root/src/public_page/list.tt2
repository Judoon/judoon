[%- WRAPPER inc/wrapper.tt2
  title = 'Public Pages'
-%]

[%- INCLUDE 'components/notification.tt2' -%]

<section id="pages">
  <h4>Publicly Available Pages</h4>
  [% IF page.list.size %]
  <table class="table table-striped table-condensed" id="page_list">
    <thead>
      <tr>
        <th></th>
        <th>Page</th>
        <th>Columns / Rows</th>
        <th>About</th>
        <th>Owner</th>
      </tr>
    </thead>
    <tbody>
      [%- FOREACH page_obj IN page.list -%]
      <tr>[% page_dataset = page_obj.dataset %][% page_owner = page_dataset.user %]
        <td>[%- loop.count -%]<a name="page_[%- page_obj.id -%]"></a></td>
        <td><a href="[%- c.uri_for_action('/private/page/object', [page_owner.username, page_dataset.id, page_obj.id]) -%]">[%- page_obj.title -%]</a></td>
        <td>[%- page_obj.nbr_columns -%] / [%- page_obj.nbr_rows -%]</td>
        <td>[%- '-' -%]</td>
        <td>[%- page_owner.username -%]</td>
      </tr>
      [%- END -%]
    </tbody>
  </table>
  [%- ELSE -%]
  <p>Sorry, no pages are available at this time.</p>
  [%- END -%]
</section>


[%- END -%]

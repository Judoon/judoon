
<div class="span3">
  <h6 class="center">Columns</h6>
  <table id="columns_used_list" class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Field</th>
        <th>Used in</th>
      </tr>
    </thead>
    <tbody>
      [% FOREACH header IN dataset.object.headers %]
      <tr class="[% loop.count % 2 ? 'odd' : 'even' %]">
        <td>[% header | html %]</td>
        <td>[% header.used_in | html %]</td>
      </tr>
      [% END %]
    </tbody>
  </table>
</div>

  <div id="top" class="navbar navbar-static-top">
    <div class="navbar-inner">
      <div class="container">

        <a class="brand" href="[% c.uri_for_action('/index') %]">Judoon</a>

        <ul class="nav pull-left">
          <li>
            <form class="navbar-search" action="/search" method="get">
              <input type="text" name="q" placeholder="Search" class="search-query">
            </form>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Browse <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="[% c.uri_for_action('/dataset/list') %]">Public Datasets</a></li>
              <li><a href="[% c.uri_for_action('/page/list') %]">Public Pages</a></li>
              <li class="divider"></li>
              <li><a href="[% c.uri_for_action('/info/get_started') %]">Get Started</a></li>
              <li><a href="[% c.uri_for_action('/info/news') %]">News</a></li>
              <li><a href="[% c.uri_for_action('/info/about') %]">About</a></li>
            </ul>
          </li>
        </ul>

        <ul class="nav pull-right">
          [% IF !c.user_exists %]
          <li><a href="[% c.uri_for_action('/login/login') %]">Login</a></li>
          <li><a href="[% c.uri_for_action('/account/signup') %]">Signup</a></li>
          [% ELSE %][% user_this = user.object || c.user %]
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user"></i> [%- user_this.username -%] <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><a href="[% c.uri_for_action('/jsapp/user_view', [user_this.username]) %]">Overview</a></li>
              <li><a href="[% c.uri_for_action('/account/profile') %]">Profile</a></li>
              <li><a href="[% c.uri_for_action('/account/settings_view') %]">Settings</a></li>
            </ul>
          </li>
          <li><a href="[% c.uri_for_action('/login/logout') %]">Logout</a></li>
          [% END %]
        </ul>

      </div>
    </div>
  </div> <!-- end navbar -->

  <div id="middle" class="container-fluid">
    <div class="row-fluid">
      <div class="span10 offset1" id="content">
        [% content %]
      </div>
    </div>
  </div>

  <div id="footer-wrapper">
  <div id="footer" class="container">
